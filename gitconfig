[user]
  name = Tony Yunker
  email = tony.yunker@gmail.com

[color]
  ui = auto
  interactive = true
  status = true
  branch = true
  diff = true

[core]
  editor = vim
	excludesfile = ~/.gitignore_global

[alias]
  st = status -sb
  co = checkout
  cob = checkout -b
  aa = add --all
  ap = add -p
  dc = diff --cached
  b = branch
  ci = commit
  rc = rebase --continue
  rs = rebase --skip
  unstage = reset
  uncommit = reset --soft HEAD^
  mup = "!git checkout master && git pull && git checkout -"

  changes = log --pretty=format:\"%h %cr %cn %Cgreen%s%Creset\" --name-status -25
